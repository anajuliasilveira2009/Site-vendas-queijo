// Exemplo de código JavaScript simples
// Este código pode ser usado para exibir uma mensagem no console
// ou para adicionar alguma interatividade no futuro.

document.addEventListener('DOMContentLoaded', (event) => {
    console.log('O site da Queijaria Artesanal foi totalmente carregado!');

    // Exemplo: Adicionar um efeito visual quando o mouse passa sobre o preço
    const precos = document.querySelectorAll('.preco');
    precos.forEach(preco => {
        preco.addEventListener('mouseover', () => {
            // Apenas para demonstração
            console.log('O cliente está de olho no preço!');
        });
    });
});

// Futuramente, você pode usar este arquivo para:
// - Validação de formulários (contato)
// - Efeitos de animação (sliders de imagens)
// - Adicionar lógica para um carrinho de compras se usar Snipcart ou similar.